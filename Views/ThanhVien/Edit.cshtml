@model doan.Models.ThanhVienModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thành viên</h2>
<form acton="/ThanhVien/Edit" method="post">
    <div class="form-group">
        <label>Mã Thành Viên</label>
        <input type="hidden" class="from-control" value="@Model.maTV" id="maTV" name="maTV" />
    </div>
    <div class="form-group">
        <label>Tên Thành Viên Viên</label>
        <input type="text" class="from-control" value=" @Model.tenTV" id="tenTV" name="tenTV" />
    </div>
    <div class="form-group">
        <label>Giới tính</label>
        <input type="text" class="from-control" value="@Model.gioiTinh" id="gioiTinh" name="gioiTinh" />
    </div>
    <div class="form-group">
        <label>Ngày sinh</label>
        <input type="date" class="from-control" value="@Model.ngaySinh" id="ngaySinh" name="ngaySinh" />
    </div>
    <div class="form-group">
        <label>Địa Chỉ</label>
        <input type="text" class="from-control" value="@Model.diaChi" id="diaChi" name="diaChi" />
    </div>
    <div class="form-group">
        <label>SDT</label>
        <input type="text" class="from-control" value="@Model.sDT." id="sDT" name="sDT" />
    </div>
    <div class="form-group">
        <label>CCCD</label>
        <input type="text" class="from-control" value="@Model.cccd" id="cccd" name="cccd" />
    </div>
    <div class="form-group">
        <label>Ngày Đăng Ký</label>
        <input type="date" class="from-control" value="@Model.ngayDangKy" id="ngayVaoLam" name="ngayVaoLam" />
    </div>
    <div class="form-group">
        <label>Điểm Tích Lũy</label>
        <input type="text" class="from-control" value="@Model.diemTichLuy" id="diemTichLuy" name="diemTichLuy" />
    </div>
    <div class="form-group">
        <label>Loại tài khoản</label>
        <input type="text" class="from-control" value="@Model.loaiTK" id="loaiTK" name="loaiTK" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="from-control" value="@Model.email" id="email" name="email" />
    </div>

    <div class="form-group ">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>

</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

