
@model IEnumerable<doan.Models.ThanhVienModel>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới</h2>
<form acton="~/ThanhVien/Create" method="post">
    <div class="form-group">
        <label>Mã Thành Viên</label>
        <input type="text" class="from-control" id="maTV" name="maTV" disabled />
    </div>
    <div class="form-group">
        <label>Tên Thành Viên</label>
        <input type="text" class="from-control" id="teTNV" name="tenTV" />
    </div>
    <div class="form-group">
        <label>Giới tính</label>
        <input type="text" class="from-control" id="gioiTinh" name="gioiTinh" />
    </div>
    <div class="form-group">
        <label>Ngày sinh</label>
        <input type="date" class="from-control" id="ngaySinh" name="ngaySinh" />
    </div>
    <div class="form-group">
        <label>Địa Chỉ</label>
        <input type="text" class="from-control" id="diaChi" name="diaChi" />
    </div>
    <div class="form-group">
        <label>SDT</label>
        <input type="text" class="from-control" id="sDT" name="sDT" />
    </div>
    <div class="form-group">
        <label>CCCD</label>
        <input type="text" class="from-control" id="cccd" name="cccd" />
    </div>
    <div class="form-group">
        <label>Ngày Đăng Ký</label>
        <input type="date" class="from-control" id="ngayDangKy" name="ngayDangKy" />
    </div>
    <div class="form-group">
        <label>Điểm tích lũy</label>
        <input type="text" class="from-control" id="diemTichLuy" name="diemTichLuy" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="from-control" id="email" name="email" />
    </div>
    <a href="/ThanhVien"><input type="submit" class="button" value="Lưu"> </a>
</form>


